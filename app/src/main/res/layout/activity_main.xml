<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/Searchbutton"
        style="@style/CategoryButtonSize"
        android:layout_width="45dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_search_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        style="@style/CategoryButtonSize"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="48dp"
        android:drawableStart="@drawable/fiction"
        android:text="@string/category3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/history_button"
        style="@style/CategoryButtonSize"
        android:layout_marginTop="440dp"
        android:text="@string/category1"
        android:drawableStart="@drawable/history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/business_button"
        style="@style/CategoryButtonSize"
        android:layout_marginTop="530dp"
        android:text="@string/category2"
        android:drawableStart="@drawable/business"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top3View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/editText"
        android:layout_width="167dp"
        android:layout_height="28dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="120dp"
        android:autofillHints="@string/Title"
        android:ems="10"
        android:textSize="20dp"
        android:hint="@string/Title"
        android:inputType="textPersonName"
        android:text="@string/Title"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>